{
    "global": {
        "abstract": "true",
        "margin": {
            "top": 0,
            "bottom": 0,
            "left": 0,
            "right": 0
        },
        "event_names": ["date"],
        "accessors": [{"type": "primitive"}],
        "scale": 1
    },

    "device_time": {
        "parent": "global",
        "type": "digital_clock",
        "size": {
            "width": 380,
            "height": 100
        },
        "device_time": true,
        "anchor": "#device-time-anchor"
    },

    "real_time": {
        "parent": "global",
        "type": "digital_clock",
        "size": {
            "width": 370,
            "height": 100
        },
        "device_time": false,
        "anchor": "#real-time-anchor"
    },

    "date": {
        "parent": "global",
        "type": "digital_date",
        "size": {
            "width": 500,
            "height": 100
        },
        "anchor": "#date-anchor"
    },

    "battery-widget": {
        "parent": "global",
        "type": "battery",
        "size":{
            "width": 260,
            "height": 0
        },
        "accessors": [{"type": "primitive"}],
        "event_names": ["battery"],
        "anchor": "#battery-widget-anchor"
    }
}
